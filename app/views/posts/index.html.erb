<h2 class='has-text-centered title is-4'>
  <% if user_signed_in? %>
    Displaying all Posts
  <% else%>
    Log in to see who posted!
  <% end %>
</h2>
<br>
<% if user_signed_in? %>
  <div class='columns is-centered'>
    <div class='column has-text-centered'>
      <%= link_to 'New Post', new_post_path, class: 'button is-link'  %>
    </div>
  </div>
<% end %>
<hr>
<div class='container'>
  <div class='tile is-ancestor post-flex'>
    <% @posts.each do |post| %>
      <div class='box tile is-parent is-4 post-box mb-1'>
        <div class='tile is-child '>
          <%= link_to post do %>
            <p class='title is-5 has-text-centered'><%= post.title %></p>
            <br>
            <p><%= truncate(post.body, length: 24) %></p>
            <br>
            <% if user_signed_in? %>
              <p><strong>Author:</strong> <%= post.user.username %></p>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
